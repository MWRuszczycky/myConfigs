! Xmodmap

! Keyboard keys (das keyboard)
! Left Ctrl = Control_L     (want this to be meta)
! Left WindowsKey = Super_L (want this as xmonad modifier)
! Left Alt = Alt_L          (want this to be control)
! Right ALt = Alt_R         (want this to be meta)
! Right FN is unknown       (this key will be ignored)
! Right Menu = Menu         (want this as xmonad modifier)
! Right Ctrl = Control_R    (want this to be control)

! Modifiers
! Mod1 : control
! Mod2 : I don't know what this modifier does
! Mod3 : meta
! Mod4 : selected by xmonad.hs as its modifier

clear Control
clear Mod1
clear Mod2
clear Mod3
clear Mod4
add Control = Alt_L
add Control = Control_R
add Mod3    = Control_L
add Mod3    = Alt_R
add Mod4    = Menu
add Mod4    = Super_L
